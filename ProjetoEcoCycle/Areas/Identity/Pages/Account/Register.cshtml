@page
@model RegisterModel
@{
    ViewData["Title"] = "Cadastrar";
}

<div class="card" style="width: 400px;">
    <div class="card-body">
        <div class="text-center">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2>EcoCycle</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-2">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-2">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-2">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <a href="" class="text-decoration-underline text-secondary">Já possui uma conta? Clique aqui</a>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-dark mt-2 mb-2">Continuar</button>
                <div class="d-flex justify-content-center">
                    <hr class="col-5 text-secondary" /><p class="text-secondary ms-4 me-4 py-1"> ou </p><hr class="col-5 text-secondary" />
                </div>
                <div id="connection_buttons" class="text-center">
                    <button class="btn btn-lg btn-secondary text-light w-100" style="color:#EEEEEE;"><i class="bi bi-google"></i> Continuar com Google</button>
                    <br /><br />
                    <button class="btn btn-lg btn-secondary text-light w-100" style="color:#EEEEEE;"><i class="bi bi-apple"></i> Continuar com Apple</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
